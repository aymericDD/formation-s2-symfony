{% extends '::base.html.twig' %}

{% block title %}User list{% endblock %}

{% block body -%}
    <ul class="list-unstyled">
        <li>
            <a href="{{ path('user_new') }}" class="btn btn-success">
                Create a new entry
            </a>
        </li>
    </ul>

    <table class="table records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Roles</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.firstname }}</td>
                <td>
                    {% for role in entity.roles %}
                        {{ role }},
                    {% endfor %}
                </td>
                <td>{{ entity.enabled|computer_status }}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('user_edit', { 'id': entity.id }) }}"  class="btn btn-default">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
