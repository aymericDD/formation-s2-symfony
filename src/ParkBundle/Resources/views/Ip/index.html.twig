{% extends '::base.html.twig' %}

{% block title %}Ip list{% endblock %}

{% block body -%}
    <ul class="list-unstyled">
        <li>
            <a class="btn-primary btn" href="{{ path('ip_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create a new entry
            </a>
        </li>
    </ul>
    <table class="records_list table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ip</th>
                <th>Updatedat</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ip_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.ip }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a class="btn-primary btn" href="{{ path('ip_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> show</a>
                        <a class="btn-success btn" href="{{ path('ip_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">
                    <strong>Empty ip</strong>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
