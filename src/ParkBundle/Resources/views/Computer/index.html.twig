{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Computer list</h1>
    <ul class="list-unstyled">
        <li>
            <a class="btn btn-primary" href="{{ path('computer_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create a new entry
            </a>
        </li>
    </ul>

    <table class="records_list table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ip</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('computer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.enabled|computer_status }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a class="btn btn-primary"  href="{{ path('computer_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> show</a>
                        <a class="btn btn-success"  href="{{ path('computer_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
