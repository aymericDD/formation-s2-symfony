{% extends '::base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body -%}
    <div class="container">
        <table class="record_properties table-bordered table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ entity.age }} ans</td>
            </tr>
            </tbody>
        </table>

        <ul class="record_actions list-unstyled">
            <li>
                <a class="btn-danger btn" href="{{ path('person') }}">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back to the list
                </a>
                <a class="btn-success btn" href="{{ path('person_edit', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                </a>
            </li>
        </ul>
        <hr>
        {{ form(delete_form) }}
    </div>
{% endblock %}
