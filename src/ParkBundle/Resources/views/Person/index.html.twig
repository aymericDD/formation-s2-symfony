{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Person list</h1>
    <ul class="list-unstyled">
        <li>
            <a class="btn-primary btn" href="{{ path('person_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create a new entry
            </a>
        </li>
    </ul>

    <table class="records_list table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a class="btn-primary btn" href="{{ path('person_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> show</a>
                        <a class="btn-success btn" href="{{ path('person_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
